<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/style/new-style.css">
    <link rel="stylesheet" type="text/css" href="/style/common-style.css">
    <link rel="stylesheet" type="text/css" href="/style/nav-style.css">
    <title>Blog</title>
</head>
<body>
    <%- include("_navbar") %> 
    <div style="margin : 0px 60px 285px 60px">
        <h1 style="margin-bottom: 40px; margin-top: 20px; font-size: 250%;">Edit Article</h1>

        <form action="/articles/<%= article.id %>?_method=PUT" method="POST">
            <%- include("_form_fields") %> 
        </form>
    </div>

    <%- include("_copyright") %>

    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <script>
        const accountBtn = document.getElementById("account-btn");
        accountBtn.hidden = true;

        const loginBtn = document.getElementById("login-btn")

        function toLogin(){
            location.href='/login'
        };

        if ('<%= session.username %>'){
            accountBtn.hidden = false;
            loginBtn.hidden = true;
        };

        function toAccount(){
            window.location.href = '/profile/<%= userid %>'
        };

        const search = document.getElementById("search")
        function whenClicked(){
            if(search.value != null){
                location.href = `/article/search?value=${search.value}`
            }
        };

        function myFunction() {
            document.getElementById("myDropdown").classList.toggle("show");
        };
    </script>
</body>
</html>