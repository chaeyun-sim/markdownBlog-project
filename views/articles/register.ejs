    <div id="div-body">
        <div>
            <h1 style="font-size: 250%"> Sign Up </h1>
        </div>
        <div id="div-signup">
            <div id="div-border">
                <form id="submitForm" action="/register" method="post" style="height: 450px;">
                    <div style="margin-bottom: 20px; margin-top: 40px;">
                        <label for="username" class="label-shape"> Enter your Username</label><br>
                        <input type="text" id="username_sign" required name="username" value="<%= user.username %>" class="form-shape"> 
                    </div>
                    <div style=" margin-bottom: 20px;">
                        <label for="password" class="label-shape"> Enter your Password </label><br>
                        <input required type="password" id="password_sign" name="password" value="<%= user.password %>" class="form-shape"> 
                    </div>
                    <div style="margin-bottom: 20px;">
                        <label for="password_cnf" style="margin-right: 110px;"> Enter your Password again. </label><br>
                        <input type="password" required id="password_cnf" name="password_cnf" class="form-shape"> 
                    </div>
                    <div style="margin-bottom: 20px;">
                        <label for="email" style="margin-right: 180px;"> Enter your Email </label><br>
                        <input type="email" required id="email" name="email" value="<%= user.email %>" class="form-shape">
                    </div>
                    <div style="margin-bottom: 20px; margin-top: 30px;">
                        <input type="radio" id="male" name="gender" value="<%= user.gender %>" checked>
                        <label for="gender_m">Male</label>
                        <input type="radio" id="female" name="gender" value="<%= user.gender %>">
                        <label for="gender_f">Female</label>
                    </div>
                    <div>  
                        <button type="submit" id="signup-btn">Sign up</button>
                    </div>
                </form>  
                <a href="/login"><button id='back-btn'>Back</button></a>
            </div>
        </div>
    </div>
